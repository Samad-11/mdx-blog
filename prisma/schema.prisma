model TestBlog {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  slug         String   @unique
  title        String
  keywords     String?
  content      String
  category     String
  categorySlug String
  view_count   Int      @default(0)
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
}
